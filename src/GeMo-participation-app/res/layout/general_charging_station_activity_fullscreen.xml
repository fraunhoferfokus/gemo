<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1E22"
    tools:context=".GeneralChargingStationActivity" >


    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="#1A1E22"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >
    
        
        <Button
            android:id="@+id/show_charging_station_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/show_charging_station_list_button" />

        <Button
            android:id="@+id/new_charging_station_complaint_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_charging_station_complaint_button" />

    </LinearLayout>

</FrameLayout>