			<groupId>org.apache.oltu.oauth2</groupId>
			<artifactId>org.apache.oltu.oauth2.integration-tests</artifactId>
			<version>0.31</version>
		</dependency>
		<dependency>
			<groupId>org.apache.logging.log4j</groupId>
